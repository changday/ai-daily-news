---
import PageMeta from "../components/PageMeta.astro";
import PageLayout from "../layouts/PageLayout.astro";
import Intro from "../components/Intro.astro";
import AboutTheTheme from "../components/AboutTheTheme.astro";
import { SITE_TITLE } from "../config";
import { readAll } from "../lib/markdoc/read";
import { blog } from "../lib/markdoc/frontmatter.schema";

const posts = await readAll({
  directory: "blog",
  frontmatterSchema: blog,
});

const sortedPosts = posts
  .filter((p) => p.frontmatter.draft !== true)
  .sort(
    (a, b) =>
      new Date(b.frontmatter.date).valueOf() -
      new Date(a.frontmatter.date).valueOf()
  );

const dates = sortedPosts.map(a => a.frontmatter.date.toLocaleDateString("en-us", {
            year: "numeric",
            month: "short",
            day: "numeric",
            timeZone: "UTC",
          }));

const filterDates = sortedPosts.map(a => a.frontmatter.date)

const filteredPosts = sortedPosts.filter((p,i) => filterDates.indexOf(p.frontmatter.date) < 10);
---

<PageLayout>
  <PageMeta title={`News Archive | ${SITE_TITLE}`} slot="meta" />
  <Fragment slot="main">
    <h2 class="inline-block font-bold text-xl mt-2">News Archive</h2>
    <ol class="relative border-l border-gray-200 dark:border-gray-700">
      {
        sortedPosts.map((post,i) => {
          const formattedDate = new Date(
            post.frontmatter.date
          ).toLocaleDateString("en-us", {
            year: "numeric",
            month: "short",
            day: "numeric",
            timeZone: "UTC",
          });
          const uniqueDate = dates.indexOf(formattedDate);
          const month = new Date(
            post.frontmatter.date
          ).toLocaleDateString("en-us", {
            month: "short",
            timeZone: "UTC",
          });
          const day = new Date(
            post.frontmatter.date
          ).toLocaleDateString("en-us", {
            day: "numeric",
            timeZone: "UTC",
          });
          return (
              <li class="mb-10 ml-4">
                <a href={post.frontmatter.url}
                    target="_blank nofollow"
                    class="unset hover:text-text-link">   
                  <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -left-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
                  { uniqueDate==i && <div class="absolute -left-12 text-center bg-orange-500 text-sm text-white dark:text-gray-900 hidden md:block"><div class="bg-white dark:bg-gray-900 text-orange-500 border border-orange-500 px-2">{day}</div><div class="">{month}</div></div> }
                  <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"><span class="md:hidden">{month} {day} - </span><img src={post.frontmatter.icon} style="display: inline; width: 16px; margin-right: 4px;">{post.frontmatter.source}</time>
                  <h3 class="title">{post.frontmatter.title}</h3>
                  <p class="mb-4 text-sm font-thin text-gray-500 dark:text-gray-400">{post.frontmatter.description}</p>
                </a>
                  </li>
          );

        })
      }
    </ol>
  </Fragment>
</PageLayout>
